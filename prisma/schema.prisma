generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl=env("DIRECT_URL")
}

model Project {
  id          Int     @id @default(autoincrement())
  name        String
  stack       String[] // Array di stringhe
  link        String?
  github      String?
  isAvaible   Boolean  @default(true)
  description String
  type        String?
  dateFrom    String
  dateTo      String?
  teamSize    Int
  role        String
  skills      ProjectSkill[]
}

model Skill {
  id    Int     @id @default(autoincrement())
  name  String
  type  String?
  projects ProjectSkill[]
}

model Experience {
  id          Int      @id @default(autoincrement())
  what        String
  location    String
  whenFrom    String
  whenTo      String?
  description String
}

model ProjectSkill {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  skill     Skill    @relation(fields: [skillId], references: [id])
  skillId   Int
}

model AboutSection {
  id        Int     @id @default(autoincrement())
  sectionKey String  // a_who, b_when, c_so, d_learn, e_and
  text      String
  order     Int     @default(0) // Per ordinare i testi nella stessa sezione
}